<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_bottom_ly"
    android:layout_width="match_parent"
    android:layout_height="@dimen/botom_layout_height"
    android:layout_alignParentBottom="true"
    android:layout_gravity="bottom"
    android:background="@drawable/bk_bottom_bg"
    android:clickable="true">

    <LinearLayout
        android:id="@+id/bt_imageline"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/id_choose_dir"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="#00000000"
            android:gravity="center_vertical"
            android:text="所有图片"
            android:textColor="#4d4d4d"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/imagev_choose_dir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@+id/id_choose_dir"
            android:src="@drawable/image_up" />

    </LinearLayout>

    <TextView
        android:id="@+id/preview_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/image_btn_gray"
        android:gravity="center"
        android:paddingBottom="@dimen/image_top_padding"
        android:paddingLeft="@dimen/priew_padding"
        android:paddingRight="@dimen/priew_padding"
        android:paddingTop="@dimen/image_top_padding"
        android:text="预览"
        android:textColor="@color/image_textgray"
        android:textSize="13sp" />
</RelativeLayout>
