<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/re_title"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#FBFBFB"
        android:layout_gravity="top">

        <ImageView
            android:id="@+id/image_back"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="@drawable/v5_selector_title_push_up_item"
            android:paddingLeft="17dp"
            android:paddingRight="17dp"
            android:scaleType="center"
            android:src="@drawable/mmv5_backbutton" />

        <View
            android:id="@+id/vline"
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/image_back"
            android:background="#CBCBCB" />

        <TextView
            android:id="@+id/image_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/vline"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text=""
            android:textColor="#4D4D4D"
            android:textSize="18dp" />

        <Button
            android:id="@+id/title_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/image_top_padding"
            android:layout_marginLeft="@dimen/priew_padding"
            android:layout_marginRight="@dimen/priew_padding"
            android:layout_marginTop="@dimen/image_top_padding"
            android:background="@drawable/image_btn_gray"
            android:gravity="center"
            android:paddingBottom="@dimen/image_top_padding"
            android:paddingLeft="@dimen/priew_padding"
            android:paddingRight="@dimen/priew_padding"
            android:paddingTop="@dimen/image_top_padding"
            android:text="@string/send_image"
            android:textColor="@color/image_textgray"
            android:textSize="13sp" />
        <View
            android:id="@+id/hline"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:background="#E6E6E6"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</LinearLayout>